{# Template Parts #}
{% extends "Admin/base.html.twig" %}

{# Document #}
{% block head_title %}{{ title(page_title|trans) }}{% endblock %}

{# Content Title #}
{% block content_head %}
    <a href="{{ app.session.get('backUrl') }}" class="back-icon"><i class="material-icons">arrow_back</i></a>
    <span class="text">{{ page_title|trans }}</span>
    <span class="desc">{{ page_description|trans }}</span>
{% endblock %}

{# Content Navigation #}
{% block content_nav %}{{ page_menu is defined ? pd_menu_render(page_menu, { 'item': item.id }) : '' }}{% endblock %}

{# Content Body #}
{% block content_body %}
    <div class="content-form">
        {% if form.acl is not defined %}
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        {% else %}
            {% include "Admin/Account/rolesTemplate.html.twig" %}
        {% endif %}
    </div>
{% endblock %}
