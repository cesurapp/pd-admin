{# Template Parts #}
{% extends "@Admin/base.html.twig" %}

{# Document #}
{% block head_title %}{{ title('account_roles_title'|trans) }}{% endblock %}

{# Content Title #}
{% block content_head %}
    <a href="{{ app.session.get('backUrl') }}" class="back-icon"><i class="material-icons">arrow_back</i></a>
    <span class="text">{{ 'account_roles_title'|trans }}</span>
    <span class="desc">{{ user.profile.firstname ~' '~ user.profile.lastname ~' - '~ user.email }}</span>
{% endblock %}

{# Content Navigation #}
{% block content_nav %}{{ pd_menu_render('App\\Admin\\Menu\\AccountMenu', { 'user': user.id }) }}{% endblock %}

{% use "@Admin/Account/rolesTemplate.html.twig" %}
